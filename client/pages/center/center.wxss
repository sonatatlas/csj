/* pages/center/center.wxss */
.info{
  display: flex;
  height: 20vh;
  widows: 100vw;
  background-color: #fff;
  justify-content: flex-start;
  align-items: center;
}
.order{
  margin-top: 2vw;
  border: 1vw;
  border-color: #aaa;
}
.order_header{
  display: flex;
  background-color: #fff;
  width: 100vw;
  height: 8vh;
  align-items: center;
  padding-left: 5vw;
  margin-bottom: 1vw;
}
.order_item{
  display: flex;
  background-color: #fff;
  height: 15vh;
  width: 100vw;
  padding-left: 5vw;
  margin-bottom: 2vw;
}
.options{
  margin-top: 0vw;
}
.option{
  display: flex;
  align-items: center;
  background-color: #fff;
  padding-left: 5vw;
  width: 100vw;
  height: 8vh;
  margin-bottom: 1vw;
}
.footer{
  margin-top: 3.5vh;
  display: flex;
  height:10vh;
  width:100vw;
  align-items: center;
  justify-content: space-around;
  flex-direction: row;
}
.btn{
  width:33vw;
  height: 7vh;
  background-color: #fff;
  margin: 2vw;
  border-radius: 1vw;
  display: flex;
  justify-content: center;
  align-items: center;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 1vw;
  border-color: #aaa;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}