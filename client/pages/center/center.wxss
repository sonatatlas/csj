/* pages/center/center.wxss */
.info{
  display: flex;
  height: 20vh;
  widows: 100vw;
  background-color: #ccc;
  justify-content: flex-start;
  align-items: center
}
.order{
  margin-top: 1vh
}
.order_header{
  display: flex;
  background-color: #bbb;
  width: 100vw;
  height: 8vh;
  align-items: center;
  padding-left: 5vw;
}
.order_item{
  display: flex;
  background-color: #ccc;
  height: 15vh;
  width: 100vw;
  padding-left: 5vw;
}
.options{
  margin-top: 1vh;
}
.option{
  background-color: #bbb;
  width: 100vw;
  height: 6vh;
  margin: 0.5vh 0vh;
}
.footer{
  margin-top: 1vh;
  display: flex;
  height:10vh;
  width:100vw;
  align-items: center;
  justify-content: space-around;
  flex-direction: row;
  background-color: #eee;
}
.btn{
  width:30vw;
  height: 5vh;
  background-color: #bbb;
  margin: 2vw;
  border-radius: 1vh;
  text-align: center;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}